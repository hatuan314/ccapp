<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thongTinNhanVien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hatuan.cc.ProfileActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tbThongTinNhanVien"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivMenu90"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_hambuger_menu48_90"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="THÔNG TIN NHÂN VIÊN"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"/>
        </FrameLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:elevation="4dp">


                <ImageView
                    android:id="@+id/imgCoverPro"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="20px"
                    android:adjustViewBounds="true"
                    android:maxWidth="42px"
                    android:maxHeight="42px"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo_convert" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProHeaderAvt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/avatar128" />
                    <TextView
                        android:id="@+id/txtProHeaderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:text="noname"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#28d3e2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtProHeaderPosition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="80dp"
                        android:text="null"
                        android:textSize="14sp"
                        android:textColor="#42a9c6"
                        android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/btnCoverPro"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:padding="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_camera_s8_26" />
                <ImageButton
                    android:id="@+id/btnAvtPro"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="10dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="115dp"
                    android:background="@null"
                    android:src="@drawable/ic_camera_s8_26" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Họ và tên:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Năm sinh:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtBirthDay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Quê quán:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtHomeTown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Phòng ban:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPhongBan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Chức vụ:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPosition"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Số điện thoại:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:text="Email:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
